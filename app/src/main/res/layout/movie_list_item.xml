<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieListCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/movieListImageImageView"
            android:layout_width="140dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/colorAccent" />

        <TextView
            android:id="@+id/movieListRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="100"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/movieListNameTextView" />

        <TextView
            android:id="@+id/movieListNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Blah blah blah: into the blaggggggggggggggg blah blah "
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/movieListRatingTextView"
            app:layout_constraintStart_toEndOf="@+id/movieListImageImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movieListReleaseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 14, 2018"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/movieListNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/movieListNameTextView" />

        <TextView
            android:id="@+id/movieListDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Looong description fffffffffffff fffffff f fffffffffff fffff ffff fffff fffff ffff  ffff ffff ffff fff fff ffffffffff fffffffff fffff f f ff  ffffffffffffffff"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintEnd_toEndOf="@+id/movieListRatingTextView"
            app:layout_constraintStart_toStartOf="@+id/movieListNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/movieListReleaseDateTextView" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginBottom="48dp"
            android:background="#90504A4A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movieListImageImageView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/movieListScheduleButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Schedule viewing"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/movieListDescriptionTextView"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/movieScheduledTimeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Scheduled: 12/22/2222 22:22"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/movieListDescriptionTextView"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
